@using Resources
@model moleQule.Example.Qapture.Models.DocumentViewModel
@{
    ViewBag.Scan = Labels.ACTION_SCAN_AND_SAVE;
}

<div class="form">
    @Html.HiddenFor(model => model.Oid, htmlAttributes: new { @id = "Oid" })
    <div class="control-group">
        <div style="text-align:center;">
            <a href="#passport" data-toggle="modal">
                <img alt="@Html.DisplayNameFor(model => model.Name)" class="preview" src="\@Model.WebPath" />
            </a>
	        <div class="caption canvas">
                <div class="fine-uploader fine-uploader-scan"></div>
	        </div>
        </div>
    </div>
    <div class="separator line bottom"></div>	
    <div id="passport" class="modal hide fade" style="display:none;">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h3>@ViewBag.Title</h3>
        </div>
        <div class="modal-body">
            <img alt="@Html.DisplayNameFor(model => model.Name)" src="\@Model.WebPath" />
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        FineUploader('fine-uploader-scan',
                    '<input type="button" class="btn btn-primary silverlight-capture" value="@ViewBag.Scan"/>');
        InitializeScan();
    });
</script>